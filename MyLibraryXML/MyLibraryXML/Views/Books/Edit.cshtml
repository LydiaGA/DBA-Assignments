@{
    ViewBag.Title = "About";
}

    <form action="/Books/Update" method="put">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="title" value="@Model["Title"].InnerText">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" name="description" rows="3">@Model["Description"].InnerText</textarea>
        </div>
        <div class="form-group">
            <label for="content">Text</label>
            <textarea class="form-control" id="content" name="content" rows="10">@Model["Content"].InnerText</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
